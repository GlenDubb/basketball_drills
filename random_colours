<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Background Color Changer</title>
<style>
  body {
    transition: background-color 0.5s;
  }
</style>
</head>
<body>
  <h1>Background Color Changer</h1>
  <label for="secondsInput">Seconds:</label>
  <input type="number" id="secondsInput" value="2">
  <button id="startButton">Start</button>
  <h2>Select Colors:</h2>
  <label><input type="checkbox" name="color" value="green" checked> Green</label>
  <label><input type="checkbox" name="color" value="red" checked> Red</label>
  <label><input type="checkbox" name="color" value="blue"> Blue</label>
  <label><input type="checkbox" name="color" value="yellow"> Yellow</label>
  <label><input type="checkbox" name="color" value="purple"> Purple</label>
  <label><input type="checkbox" name="color" value="orange"> Orange</label>

  <script>
    const colors = ["green", "red", "blue", "yellow", "purple", "orange"];
    let intervalId;

    function changeBackgroundColor() {
      const selectedColors = Array.from(document.querySelectorAll('input[name="color"]:checked')).map(input => input.value);
      const randomColor = selectedColors[Math.floor(Math.random() * selectedColors.length)];
      document.body.style.backgroundColor = randomColor;
    }

    function startColorChange() {
      if (intervalId) {
        clearInterval(intervalId);
      }
      const seconds = parseInt(document.getElementById('secondsInput').value) * 1000;
      intervalId = setInterval(changeBackgroundColor, seconds);
    }

    document.getElementById('startButton').addEventListener('click', startColorChange);
    startColorChange(); // Initial call to start the color changing
  </script>
</body>
</html>
